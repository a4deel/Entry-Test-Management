@{
    var styleURL = "/Content/styles";
}
<!-- ////////////////////////////////////////////////////////////////////////////-->
<div class="wrapper">
    <div class="main-panel">
        <!-- BEGIN : Main Content-->
        <div class="main-content">
            <div class="content-wrapper">
                <!--Login Page Starts-->
                <section id="login">
                    <div class="container-fluid">
                        <div class="row full-height-vh m-0">
                            <div class="col-12 d-flex align-items-center justify-content-center">
                                <div class="card">
                                    <div class="card-content">
                                        <div class="card-body login-img">
                                            <div class="row m-0">
                                                <div class="col-lg-6 d-lg-block d-none py-2 text-center align-middle">
                                                    <img src="@styleURL/img/gallery/logo.png" alt="" class="img-fluid mt-5" width="400"
                                                         height="250">
                                                </div>
                                                <div class="col-lg-6 col-md-12 bg-white px-4 pt-3">
                                                    <h3 class="mb-2 card-title">Login</h3>
                                                    <p class="card-text mb-3">
                                                        Welcome back, please login to your account.
                                                    </p>
                                                    <div class="login-render">
                                                        <div class="fg-actions d-flex justify-content-between">
                                                            <div class="recover-pass">
                                                                <a href="/User/UserLogin" class="text-decoration-none text-white">
                                                                    <button class="btn btn-primary" style="width: 350px;">
                                                                        Login As User
                                                                    </button>
                                                                </a>
                                                            </div>
                                                        </div>
                                                        <br>
                                                        <div class="fg-actions d-flex justify-content-between">
                                                            <div class="recover-pass">
                                                                <a href="/Admin/AdminLogin" class="text-decoration-none text-white">
                                                                    <button class="btn btn-primary" style="width: 350px;">
                                                                        Login As Admin
                                                                    </button>
                                                                </a>
                                                            </div>
                                                        </div>
                                                        <br>
                                                        <div class="fg-actions d-flex justify-content-between">
                                                            <div class="recover-pass">
                                                                <a href="/User/RegisterUser" class="text-decoration-none">
                                                                    <button class="btn btn-primary" style="width: 350px;">
                                                                        Register
                                                                    </button>
                                                                </a>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
                <!--Login Page Ends-->

            </div>
        </div>
        <!-- END : End Main Content-->
    </div>
</div>
<!-- ////////////////////////////////////////////////////////////////////////////-->