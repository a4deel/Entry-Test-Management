@model EntryTestManagement.Models.UserLogin
@{
    var styleURL = "/Content/styles";
}
<div class="wrapper">
    <div class="main-panel">
        <!-- BEGIN : Main Content-->
        <div class="main-content">
            <div class="content-wrapper">
                <!--Registration Page Starts-->
                <section id="regestration">
                    <div class="container-fluid">
                        <div class="row full-height-vh m-0">
                            <div class="col-12 d-flex align-items-center justify-content-center">
                                <div class="card">
                                    <div class="card-content">
                                        <div class="card-body register-img">
                                            <div class="row m-0">
                                                <div class="col-lg-6 d-none d-lg-block py-2 text-center">
                                                    <img src="@styleURL/img/gallery/logo.png" alt="" class="img-fluid mt-3 pl-3" width="400"
                                                         height="230">
                                                </div>
                                                <div class="col-lg-6 col-md-12 px-4 pt-3 bg-white">
                                                    <h4 class="card-title mb-2">Create Account</h4>
                                                    <p class="card-text mb-3">
                                                        Fill the below form to create a new account.
                                                    </p>
                                                    @using (Html.BeginForm("RegisterUser", "User", FormMethod.Post))
                                                    {
                                                        @Html.ValidationSummary(true)
                                                        if (@TempData["Message"] != null)
                                                        {
                                                            <p style="color:red !important;font-size:x-large;">@TempData["Message"]</p>
                                                        }
                                                        @Html.AntiForgeryToken()
                                                        @Html.TextBoxFor(user => user.email, "", new { @class = "form-control mb-1", @placeholder = "Email" })
                                                        @Html.ValidationMessageFor(user => user.email, "", new { @class = "badge badge-danger" })
                                                        @Html.PasswordFor(user => user.password, new { @class = "form-control mb-1", @placeholder = "Password" })
                                                        @Html.ValidationMessageFor(user => user.password, "", new { @class = "badge badge-danger" })
                                                        @*@Html.PasswordFor(user => user.ConfirmPassword, new { @class = "form-control mb-1", @placeholder = "Confim Password" })
                                                        @Html.ValidationMessageFor(user => user.ConfirmPassword, "", new { @class = "badge badge-danger" })*@
                                                        <hr>
                                                        <div class="fg-actions d-flex justify-content-between">
                                                            <div class="recover-pass">
                                                                <input type="submit" id="submit" name="submit" class="btn btn-primary" style="padding:0.375rem 10.75rem;" value="Register" />
                                                            </div>
                                                        </div>
                                                        <hr />
                                                    }
                                                    <div class="fg-actions d-flex justify-content-between">
                                                        <div class="login-btn">
                                                            <a href="/User/UserLogin" class="text-decoration-none btn btn-outline-primary">
                                                                Back To Login
                                                            </a>
                                                        </div>
                                                        <div class="login-btn">
                                                            <a href="/Home/Index" class="text-decoration-none btn btn-outline-primary">
                                                                Back To Home
                                                            </a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
                <!--Registration Page Ends-->
            </div>
        </div>
        <!-- END : End Main Content-->
    </div>
</div>
<!-- ////////////////////////////////////////////////////////////////////////////-->
<script>
    if (window.history.replaceState) {
        window.history.replaceState(null, null, window.location.href);
    }
</script>