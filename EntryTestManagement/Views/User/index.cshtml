@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";
    var UserName = Session["UserName"];
    var styleURL = "/Content/styles";

}
<div class="main-panel">
    <!-- BEGIN : Main Content-->
    <div class="main-content">
        <div class="content-wrapper">
            <div class="col-sm-12">
                <div class="card">
                    <div class="message">
                        <p class="badge badge-primary">@UserName Welcome To Dashboard</p>
                    </div>
                    @if (@TempData["Message"] != null)
                    {
                        <p style="font-size:x-large;" class="badge badge-danger">@TempData["Message"]</p>
                    }
                    <hr />
                    <div class="card-header">
                        <h2 class="card-title">Faculty of Computing & Information Technology</h2>
                    </div>
                    <div class="card-content">
                        <div class="card-body">
                            <div class="user-index">
                                <img src="@styleURL/img/gallery/logo-new.png" width="500" />
                            </div>
                            <hr />
                            <div class="recover-pass" style="margin-left:5.5rem;">
                                @if(Session["Added"].Equals("Added"))
                                {
                                    <a href="@Url.Action("Challan","User")" class="btn btn-primary text-decoration-none text-white">View Challan Form</a>
                                }
                                else
                                {
                                    <a href="@Url.Action("Add","User")" class="btn btn-primary text-decoration-none text-white">Register Your Personal Information</a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>