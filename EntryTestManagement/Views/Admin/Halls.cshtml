@model List<EntryTestManagement.Models.Hall>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="main-panel">
    <!-- BEGIN : Main Content-->
    <div class="main-content">
        <div class="content-wrapper">
            <section id="column">
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <h4 class="card-title">View Halls</h4>
                            </div>
                            <div class="recover-pass" style="margin-left: auto;margin-right:30px;">
                                <a href="@Url.Action("AddHall","Admin")" class="btn btn-primary text-decoration-none text-white">Add New Hall</a>
                            </div>
                            @if (@TempData["Message"] != null)
                            {
                                <p style="font-size:x-large;" class="badge badge-danger">@TempData["Message"]</p>
                            }
                            <div class="card-content ">
                                <div class="card-body card-dashboard table-responsive">
                                    <table class="table table-striped table-bordered column-rendering">
                                        <thead>
                                            <tr>
                                                <th>ID</th>
                                                <th>Name</th>
                                                <th>IsFull</th>
                                                <th>Capacity</th>
                                                <th>Current Allocated Attendants</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var hall in Model)
                                            {
                                                var full = "";
                                                if (@hall.IsFull.Equals("0"))
                                                {
                                                    full = "No";
                                                }
                                                else
                                                {
                                                    full = "Yes";
                                                }
                                                <tr>
                                                    <td>@hall.Id</td>
                                                    <td>@hall.Name</td>
                                                    <td>@full</td>
                                                    <td>@hall.Capacity</td>
                                                    <td>@hall.Count</td>
                                                </tr>
                                            }
                                        </tbody>
                                        <tfoot>
                                            <tr>
                                                <th>ID</th>
                                                <th>Name</th>
                                                <th>IsFull</th>
                                                <th>Capacity</th>
                                                <th>Current Allocated Attendants</th>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>
