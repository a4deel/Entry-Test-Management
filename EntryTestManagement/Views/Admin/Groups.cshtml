@model List<EntryTestManagement.Models.Group>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="main-panel">
    <div class="main-content">
        <div class="content-wrapper">
            <section id="column">
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <h4 class="card-title">View Groups</h4>
                            </div>
                            @if (@TempData["Message"] != null)
                            {
                                <p style="font-size:x-large;" class="badge badge-danger">@TempData["Message"]</p>
                            }
                            <div class="card-content ">
                                <div class="card-body card-dashboard table-responsive">
                                    <table class="table table-striped table-bordered column-rendering">
                                        <thead>
                                            <tr>
                                                <th>ID</th>
                                                <th>Group Name</th>
                                                <th>IsFull</th>
                                                <th>Test Time</th>
                                                <th>Test Date</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var group in Model)
                                            {
                                                var full = "";
                                                if (@group.IsFull.Equals("0"))
                                                {
                                                    full = "No";
                                                }
                                                else
                                                {
                                                    full = "Yes";
                                                }
                                                <tr>
                                                    <td>@group.Id</td>
                                                    <td>@group.Name</td>
                                                    <td>@full</td>
                                                    <td>@group.Time</td>
                                                    <td>@group.Date</td>
                                                </tr>
                                            }
                                        </tbody>
                                        <tfoot>
                                            <tr>
                                                <th>ID</th>
                                                <th>Group Name</th>
                                                <th>IsFull</th>
                                                <th>Test Time</th>
                                                <th>Test Date</th>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>
