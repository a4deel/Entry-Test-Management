@model List<EntryTestManagement.Models.AdminData>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{
    var @styleURL = "/Content/styles/img/admins";
}
<div class="main-panel">
    <!-- BEGIN : Main Content-->
    <div class="main-content">
        <div class="content-wrapper">
            <section id="column">
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <h4 class="card-title">View Admins</h4>
                            </div>
                            @if (@TempData["Error"] != null)
                            {
                                <p style="font-size:x-large;" class="badge badge-danger">@TempData["Error"]</p>
                            }
                            <div class="card-content ">
                                <div class="card-body card-dashboard table-responsive">
                                    <table class="table table-striped table-bordered column-rendering">
                                        <thead>
                                            <tr>
                                                <th>ID</th>
                                                <th>Image</th>
                                                <th>Name</th>
                                                <th>Email</th>
                                                <th>CNIC</th>
                                                <th>Contact</th>
                                                <th>Address</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var admin in Model)
                                            {
                                                var image = "";
                                                if (@admin.Image != "")
                                                {
                                                    image = @styleURL + "/" + @admin.Image + ".png";
                                                }
                                                else
                                                {
                                                    image = @styleURL + "/user.png";
                                                }
                                                var FullName = @admin.FirstName + " " + @admin.LastName;
                                                <tr>
                                                    <td>@admin.id</td>
                                                    <td><img src="@image" height="100" width="100" style="border-radius: 50%;color:white;"></td>
                                                    <td><a href="@Url.Action("AdminProfile","Admin",new {@admin.id})">@FullName</a></td>
                                                    <td>@admin.email</td>
                                                    <td>@admin.CNIC</td>
                                                    <td>@admin.Contact</td>
                                                    <td>@admin.Address</td>
                                                </tr>
                                            }
                                        </tbody>
                                        <tfoot>
                                            <tr>
                                                <th>ID</th>
                                                <th>Image</th>
                                                <th>Name</th>
                                                <th>Email</th>
                                                <th>CNIC</th>
                                                <th>Contact</th>
                                                <th>Address</th>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>
